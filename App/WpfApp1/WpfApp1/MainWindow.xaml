<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple WPF App" Height="200" Width="300">
    <Grid>

        <!-- Define a TextBox at the top of the window -->
        <TextBox x:Name="myTextBox" Width="197" Height="72"
                 HorizontalAlignment="Center" VerticalAlignment="Top"
                 Margin="0,20,0,0" Text="Enter some text..." />

        <Button x:Name="myButton" Content="Start spring effect (PID)" Width="100" Height="50" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Click="myButton_Click" Margin="81,111,0,0"/>
    </Grid>
</Window>